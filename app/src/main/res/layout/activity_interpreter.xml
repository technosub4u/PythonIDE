<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cyberpunk_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/cyberpunk_surface"
        app:title="@string/interpreter_mode"
        app:titleTextColor="@color/cyberpunk_text" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cyberpunk_background">

        <TextView
            android:id="@+id/interpreterReadyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Python Interpreter Ready"
            android:textColor="@color/cyberpunk_accent"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"
            android:textIsSelectable="false"
            android:enabled="false" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cyberpunk_accent" />

    <EditText
        android:id="@+id/interpreterInput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/cyberpunk_code_background"
        android:fontFamily="monospace"
        android:gravity="top"
        android:padding="16dp"
        android:textColor="@color/cyberpunk_text"
        android:textSize="16sp" />

</LinearLayout>
